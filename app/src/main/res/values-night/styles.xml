<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_main_buttons</item>
        <item name="android:layout_marginLeft">@dimen/left_right_buttons</item>
        <item name="android:layout_marginRight">@dimen/left_right_buttons</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextViewSettingsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageViewSettingsStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">?attr/colorForSettingsIcons</item>
    </style>

    <style name="TextViewArtistAndTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/artist_name_act_track_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorForSettingsIcons</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitlesPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_title_country_player</item>
        <item name="android:paddingTop">@dimen/padding_top_title_country_player</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_title_country_player</item>
    </style>

    <style name="SourcesPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_source_country_player</item>
        <item name="android:paddingTop">@dimen/padding_top_source_country_player</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_source_country_player</item>
    </style>

    <!-- Tablayout Media -->
    <style name="TabTextStyle">
        <!-- Размер текста -->
        <item name="android:textSize">14sp</item>

        <!-- Семейство шрифтов -->
        <item name="android:fontFamily">@font/ys_display_medium</item>

    </style>

</resources>