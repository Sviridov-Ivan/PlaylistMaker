<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_playlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/playerBackground"
    tools:context="com.example.playlistmaker.media.ui.fragments.NewPlaylistFragment">

    <!-- Добавил по 2 Guideline с каждой стороны, так разные отступы у объектов-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guideline_large_player" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guideline_small_player" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/guideline_large_player" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/guideline_small_player" />

    <ImageView
        android:id="@+id/arrow_back_to_media"
        android:layout_width="@dimen/back_arrow_size"
        android:layout_height="@dimen/back_arrow_size"
        android:layout_marginStart="@dimen/margin_arrow_player"
        android:layout_marginTop="@dimen/margin_arrow_player"
        android:contentDescription="@string/contentDescription_arrow_back"
        android:scaleType="centerCrop"
        android:src="@drawable/light_mode_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnSecondary" />

    <TextView
        android:id="@+id/name_new_playlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_playlist_margin_top_name_textview"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_medium"
        android:maxLines="1"
        android:paddingStart="@dimen/new_playlist_padding_start_name_textview"
        android:paddingTop="@dimen/new_playlist_padding_top_name_textview"
        android:paddingBottom="@dimen/new_playlist_padding_bottom_name_textview"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_size_source_track_name_player"
        android:text="@string/new_playlist_screen_title"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/right_guideline_24dp"
        app:layout_constraintStart_toEndOf="@id/arrow_back_to_media"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Проверь потом радиусы закруглений (тут 8дп) и размеры картинки-->
    <ImageView
        android:id="@+id/source_playlist_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_top_image_player"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background_imageview_new_playlist"
        android:clickable="true"
        android:clipToOutline="true"
        android:contentDescription="@string/contentDescription_track_image"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add_photo_hint_flexible"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutName"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_24dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_24dp"
        app:layout_constraintTop_toBottomOf="@+id/arrow_back_to_media" />

    <!-- Название плейлиста -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_playlist_margin_bottom_name_input_layout"
        app:boxBackgroundColor="?attr/playerBackground"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/new_playlist_box_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/new_playlist_box_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/new_playlist_box_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/new_playlist_box_corner_radius"
        app:boxStrokeColor="@color/playlist_edittext_stroke"
        android:hint="@string/new_playlist_name_playlist"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutDescription"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_16dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_edit_text_name_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="255"
            android:paddingTop="@dimen/new_playlist_padding_top_edittext"
            android:paddingBottom="@dimen/new_playlist_padding_top_edittext"
            android:singleLine="true"
            android:textColor="?attr/colorOnSecondary"
            android:textCursorDrawable="@drawable/blue_cursor"
            android:textSize="@dimen/settings_text_size" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Описание плейлиста -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_playlist_margin_bottom_description_input_layout"
        app:boxBackgroundColor="?attr/playerBackground"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/new_playlist_box_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/new_playlist_box_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/new_playlist_box_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/new_playlist_box_corner_radius"
        app:boxStrokeColor="@color/playlist_edittext_stroke"
        app:hintTextColor="@color/playlist_hint_color"
        app:layout_constraintBottom_toTopOf="@+id/button_add_playlist"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_16dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_edit_text_description_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_playlist_description"
            android:inputType="text"
            android:maxLength="255"
            android:paddingTop="@dimen/new_playlist_padding_top_edittext"
            android:paddingBottom="@dimen/new_playlist_padding_top_edittext"
            android:singleLine="true"
            android:textColor="?attr/colorOnSecondary"
            android:textCursorDrawable="@drawable/blue_cursor"
            android:textSize="@dimen/settings_text_size" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Кнопка Создать-->
    <Button
        android:id="@+id/button_add_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/new_playlist_margin_start_button"
        android:layout_marginEnd="@dimen/new_playlist_margin_end_button"
        android:layout_marginBottom="@dimen/new_playlist_margin_bottom_button"
        android:background="@drawable/button_playlist_selector"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:text="@string/new_playlist_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/new_playlist_text_size_button"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_16dp"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>