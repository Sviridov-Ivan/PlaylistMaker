<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:padding="4sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:paddingBottom="28dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/between_buttons"
            android:layout_marginRight="@dimen/between_buttons"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/search"
            android:textSize="22sp"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:icon="@drawable/light_mode"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/between_icon_and_text"
            app:iconTint="@color/black"
            app:cornerRadius="16dp"
            android:foreground="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/button_media"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/between_buttons"
            android:layout_marginLeft="@dimen/between_buttons"
            android:layout_marginRight="@dimen/between_buttons"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/media"
            android:textSize="22sp"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:icon="@drawable/light_mode_2"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/between_icon_and_text"
            app:iconTint="@color/black"
            app:cornerRadius="16dp"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginLeft="@dimen/between_buttons"
            android:layout_marginRight="@dimen/between_buttons"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/settings_button"
            android:textSize="22sp"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:icon="@drawable/light_mode_1"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/between_icon_and_text"
            app:iconTint="@color/black"
            app:cornerRadius="16dp"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>



</LinearLayout>